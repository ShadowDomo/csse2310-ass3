#ifndef PATH_H
#define PATH_H

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <stdbool.h>
#include "util.h"
#include "player.h"



/** A single site.
 */
typedef struct Site {
    char *type;
    int playerLimit;
    int *players;
} Site;

/** Represents the game path.
 */
typedef struct Path {
    int size;
    Site *sites;
} Path;

void printPath(Path *path);

void alloc_path(Path *path, FILE *file, int numPlayers);


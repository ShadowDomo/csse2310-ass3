#ifndef PATH_H
#define PATH_H

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <stdbool.h>
#include "util.h"



/** A single site.
 */
typedef struct Site {
    char *type;
    int playerLimit;
    char *Players;
} Site;

/** Represents the game path.
 */
typedef struct Path {
    int size;
    Site *sites;
} Path;

void print_path(Path *path);

void alloc_path(Path *path, FILE *file, char **argv);

#endif